@model IEnumerable<Project.Models.ListDemo>
@{
    ViewBag.Title = "Index";
}

<h1>@ViewData["LabTitle"]</h1>

<form method="get">
    <div class="mb-3">
        <label for="exampleInput" class="form-label">Example Input</label>
        <input type="text" class="form-control" id="exampleInput" name="data">
    </div>
    <div class="mb-3">
        <label class="form-label">Select Item</label>
        <select asp-items="@(new SelectList(Model, "Id", "Name"))" class="form-select"></select>
    </div>
    <div class="mb-3 form-check">
        <input type="checkbox" class="form-check-input" id="exampleCheck" name="check">
        <label class="form-check-label" for="exampleCheck">Check me out</label>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>

<h3>List of Items</h3>
<ol type="A">
    @foreach (var item in Model)
    {
        <li>@item.Name (Id: @item.Id)</li>
    }
</ol>
